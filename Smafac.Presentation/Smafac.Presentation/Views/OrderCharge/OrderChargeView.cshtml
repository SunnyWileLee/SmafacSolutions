@model  IEnumerable<OrderChargeModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>费用</th>
                    <th>是否显示在列表</th>
                    <th>是否关联删除</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in Model)
                {
                    <tr>
                        <td>@property.Name</td>
                        <td>
                            @{
                                var isTableColumn = property.IsTableColumn ? "是" : "否";
                            }
                            @isTableColumn
                        </td>
                        <td>
                            @{
                                var isDeleteAssociations = property.IsDeleteAssociations ? "是" : "否";
                            }
                            @isDeleteAssociations
                        </td>
                        <td><input type="button" class="btn btn-postid btn-danger" data-url="/OrderCharge/DeleteOrderCharge" data-identity="@property.Id" href="" value="删除" /></td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-6">
        <form class="form-horizontal" id="form-submit">
            <div class="form-group">
                <label for="Name" class="col-lg-3 control-label">费用</label>
                <div class="col-lg-9">
                    <input type="text" class="form-control" name="Name">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-9">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="IsTableColumnOn">是否显示在列表
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-9">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="IsDeleteAssociationsOn">是否关联删除
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <div class="btn-group">
                        <input type="button" value="保存" class="btn btn-success btn-submit" data-url="AddOrderCharge">
                        <a class="btn btn-default" href="/Order/OrderView" type="button">
                            <i class="m-icon-swapleft m-icon-white"></i>
                            返回列表
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
