@model  IEnumerable<OrderChargeModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>费用</th>
                    <th>显示在列表</th>
                    <th>关联删除</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in Model)
                {
                    <tr>
                        <td>@property.Name</td>
                        <td>
                            @{
                                var isTableColumn = property.IsTableColumn ? "是" : "否";
                            }
                            @isTableColumn
                        </td>
                        <td>
                            @{
                                var isDeleteAssociations = property.IsDeleteAssociations ? "是" : "否";
                            }
                            @isDeleteAssociations
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default">操作</button>
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <input type="button" class="btn btn-primary btn-block" value="编辑" onclick="editCharge('@property.Id')" />
                                    </li>
                                    <li>
                                        <input type="button" class="btn btn-postid btn-danger btn-block" data-url="/OrderCharge/DeleteOrderCharge" data-identity="@property.Id" value="删除" />
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-6" id="column-container">

    </div>
</div>


<script type="text/javascript">
    $(function () {
        var columnContainer = $('#column-container');
        if (columnContainer.length == 0) {
            return;
        }
        var action = "/OrderCharge/OrderChargeAddView";
        $.ajax({
            type: "get",
            url: action,
            dataType: "html",
            success: function (data) {
                columnContainer.html(data);
            }
        });
    })

    function editCharge(propertyId) {
        var action = "/OrderCharge/OrderChargeAddView?propertyId=" + propertyId;
        $.ajax({
            type: "get",
            url: action,
            dataType: "html",
            success: function (data) {
                $('#column-container').html(data);
            }
        });
    }
</script>