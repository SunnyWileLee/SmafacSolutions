@model IEnumerable<GoodsModel>

@{
    Layout = null;
}

<table class="table table-condensed table-striped">
    <thead>
        <tr>
            <th>名称</th>
            <th>售价</th>
            <th>类别</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var goods in Model)
            {
            <tr>
                <td>@goods.Name</td>
                <td>@goods.Price.ToString()</td>
                <td>@goods.CategoryName</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-default" href="/Goods/GoodsDetailView?goodsId=@goods.Id" type="button">详情</a>
                        <a class="btn btn-default" href="/Order/OrderAddView?goodsId=@goods.Id" type="button">下单</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
