@model  IEnumerable<GoodsPropertyModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var types = ViewData["types"] as IEnumerable<SelectListItem>;
}

<div class="row">
    <div class="col-lg-6">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>属性</th>
                    <th>类型</th>
                    <th>显示在列表</th>
                    <th>关联删除</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in Model)
                {
                    <tr>
                        <td>@property.Name</td>
                        <td>
                            @{
                                var propertyType = property.Type.GetHashCode().ToString();
                                var type = types.FirstOrDefault(s => s.Value.Equals(propertyType));
                                var typeString = type == null ? "未知类型" : type.Text;
                            }
                            @typeString
                        </td>
                        <td>
                            @{
                                var isTableColumn = property.IsTableColumn ? "是" : "否";
                            }
                            @isTableColumn
                        </td>
                        <td>
                            @{
                                var isDeleteAssociations = property.IsDeleteAssociations ? "是" : "否";
                            }
                            @isDeleteAssociations
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default">操作</button>
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <input type="button" class="btn btn-primary btn-block" value="编辑" onclick="editProperty('@property.Id')" />
                                    </li>
                                    <li>
                                        <input type="button" class="btn btn-postid btn-danger btn-block" data-url="/GoodsProperty/DeleteGoodsProperty" data-identity="@property.Id" value="删除" />
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-6" id="column-container">

    </div>
</div>


<script type="text/javascript">
    $(function () {
        var columnContainer = $('#column-container');
        if (columnContainer.length == 0) {
            return;
        }
        var action = "/GoodsProperty/GoodsPropertyAddView";
        $.ajax({
            type: "get",
            url: action,
            dataType: "html",
            success: function (data) {
                columnContainer.html(data);
            }
        });
    })

    function editProperty(propertyId) {
        var action = "/GoodsProperty/GoodsPropertyAddView?propertyId=" + propertyId;
        $.ajax({
            type: "get",
            url: action,
            dataType: "html",
            success: function (data) {
                $('#column-container').html(data);
            }
        });
    }
</script>
