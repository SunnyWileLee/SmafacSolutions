@model IEnumerable<OrderChargeModel>

@{
    Layout = null;
}

<div>
    <form class="form-horizontal">
        @foreach (var charge in Model)
        {
            <div class="form-group">
                <label class="col-lg-2 control-label" for="@charge.Id.ToString()">@charge.Name</label>
                <div class="col-lg-10">
                    <input class="form-control input-chargeValue" name="@charge.Id.ToString()" data-display="@charge.Name" value="0" />
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-9">
                <button type="button" class="btn btn-default" onclick="sumCharge()">计算总价</button>
            </div>
        </div>
    </form>
</div>
