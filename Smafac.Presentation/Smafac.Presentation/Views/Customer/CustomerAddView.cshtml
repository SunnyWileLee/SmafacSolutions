@model CustomerModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <form class=" form-horizontal">
            <div class="form-group">
                @Html.LabelFor(s => s.Name, new { @class = "col-lg-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.Address, new { @class = "col-lg-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(s => s.Address, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.MobileNumber, new { @class = "col-lg-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(s => s.MobileNumber, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.KnownDate, new { @class = "col-lg-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(s => s.KnownDate, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.LevelName, new { @class = "col-lg-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(s => s.LevelName, new { @class = "form-control" })
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-6">
        <form class=" form-horizontal">
            @foreach (var property in Model.Properties)
            {
                <div class="form-group">
                    @Html.Label(property.PropertyName, new { @class = "col-lg-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBox(property.PropertyId.ToString(), property.Value, new { @class = "form-control" })
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-default">提交</button>
                </div>
            </div>
        </form>
    </div>
</div>
